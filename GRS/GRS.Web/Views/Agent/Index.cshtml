@model List<CandidateViewModel>
@{
    ViewBag.Title = "Registered Candidates";
}
<div class="col-md-12" style="padding-bottom:50px;padding-top:20px">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Index" method="post" class="form-inline">
            <div class="form-group">
                <label for="exampleInputName2">Skill</label>
                <select name="skillId" class="form-control" asp-items="@(new SelectList(ViewBag.Skills,"Id","Name", ViewBag.SelectedSkillId))">
                    <option value="0">--Select--</option>
                </select>
            </div>
            <button type="submit" class="btn btn-info">Filter Candidates</button>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
<div class="col-md-12">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
{
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td class="text-center">
                        <form asp-action="Delete" method="post">
                            <a asp-action="Edit" class="btn btn-sm btn-warning"
                                asp-route-Id="@item.Id">
                                Edit
                            </a>
                            <input type="hidden" name="Id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        <div class="text-left">
            <a asp-action="Create" class="btn btn-primary">Register a new candidate</a>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
